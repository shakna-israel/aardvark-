#!/bin/sh

set -e

aardir=$(dirname $(readlink -f $0))
source "$aardir/aardvark.test"

help() {

}

#Error codes
INVALIDMODEL=100

if [ -z "$1" ]; then
  help
fi

if [ "$1" = 'listmodel' ]; then
  cat "$aardir/aardvark.models"
  exit 0
fi

# check if matches line in .models

if [ -z "$MODEL" ]; then
  echo 'Model is not supported. (Check [aardvark listmodel])' 1>&2
  exit $INVALIDMODEL
fi
